@import "../../node_modules/nib"
@import "../../node_modules/rupture/rupture"
@import "../../node_modules/jeet/stylus/jeet"

@import "import"




header[role=main]
	height: 20vh
	position: relative


//@import "partials/nav"
.Nav
	display: flex
	background-color: $color-accent
	responsive-color()

	justify-content space-around

	padding: 1em 0
	text-align: center

	box-shadow: inset 0 -1px 1px  rgba(black, 0.09)

	.Nav__link
		flex-grow 1
		font-weight: bold



//@import "partials/section"

$Section
	padding-top: 4em
	.Section--title
		text-align: center
		font-family: $fontHighlight
		font-weight: 300
		line-height: 1.1471em
		letter-spacing -.3px
		font-size: $fontXLarge

		+above(4)
			font-size: $fontXXLarge

	.Section--slogan
		text-align: center
		font-family: $fontHighlight
		font-weight: 300
		font-size: $fontMedium

		+above(4)
			font-size: $fontLarge



	.Section--title--divider
		$unit = 1px

		height: $unit
		border: 0
		background-color: rgb(224, 224, 224)
		margin:$fontSmall auto ($fontSmall - 1)
		width: 40%

		+above(4)
			margin:$fontLarge auto ($fontLarge - 1)

.Section__Work
	@extends $Section
.Section__Header
	@extends $Section


	.Section__Header--product
		stack()

		+above(3)
			col(1/3)
//



.Portfolio__Wrap
	cf()
.Card
	$padding = 2%

	stack()

	background-color: #fff
	transition: background-color $animation-default

	box-sizing border-box
	position: relative
	overflow hidden

	&.clicked
		background-color: $color-accent
		.Card__details
			transform translateY(0)
			box-shadow: rgba(0, 0, 0, 0.0980392) 0px 2px 4px, rgba(0, 0, 0, 0.0980392) 0px 0px 3px;

	+below(2)
		margin-bottom: .5em



	+above(3)
		col(1/2, cycle:2)
		margin-bottom: @margin-right

	+above(4)
		col(1/3, uncycle:2, cycle:3)
	font-size: $fontBase
	card()

	svg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
	circle {
		fill: rgba(255,255,255,0.1);
	}
	.Card__details
		display: none
		position: absolute
		width: 100%
		height: 100%
		top: 0
		left: 0
		padding: $padding
		box-sizing border-box
		background-color: $color-accent
		color white

		will-change:transform
		//transform translateY(-100%)
		transition: transform $animation-default





	.Card__img
		padding: $padding
		img
			max-width 100%
			vertical-align: bottom

	.Card__button
		position: absolute
		height 56px
		width 56px

		bottom: - (@height / 2 )
		right: @padding


		background-color $color-accent
		color white

		border 0
		outline none
		border-radius 50%


		