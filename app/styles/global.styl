@import "lib/_mixins"
@import "lib/_vars"


*
	-webkit-tap-highlight-color transparent


html
	overflow-y: scroll;

html, body
	background-color: #f5f5f5
	font-family: $fontDefault

	responsive-color()


h1,h2,h3,h4,h5,p
	margin: 0

html a
	color: inherit
	text-decoration: none


.container
	box-sizing: content-box;
	position: relative;
	padding-left: 16px;
	padding-right: 16px;
	margin-left: auto;
	margin-right: auto;

	+above(3)
		padding-left: 30px;
		padding-right: 30px;
